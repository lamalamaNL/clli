{
    "name": "lamalama/clli",
    "description": "CLLI - Lama Lama Command Line Interface",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark de Vries",
            "email": "mark@lamalama.nl"
        },
        {
            "name": "Edwin Fennema",
            "email": "edwin@lamalama.nl"
        }
    ],
    "require": {
        "php": "^8.1",
        "cloudflare/sdk": "^1.4",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/filesystem": "^10.20",
        "illuminate/support": "^10.20",
        "laravel/forge-sdk": "^3.14",
        "laravel/prompts": "^0.1",
        "openai-php/client": "^0.16.1",
        "symfony/console": "^6.0",
        "symfony/process": "^6.0"
    },
    "require-dev": {
        "laravel/pint": "^1.19",
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.10",
        "rector/rector": "^1.2"
    },
    "bin": [
        "bin/clli"
    ],
    "autoload": {
        "psr-4": {
            "LamaLama\\Clli\\Console\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
